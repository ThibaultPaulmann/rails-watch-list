<h1>
  <%= link_to lists_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  Your <%= @list.name %> Bookmarks
</h1>
<ul>
  <% @bookmarks.each do |bookmark| %>
    <p><%= bookmark.comment %></p>
    <p><%= bookmark.movie.title %>: <%= bookmark.movie.overview %></p>
    <div><%= image_tag bookmark.movie.poster_url, alt: "movie poster", width: 200 %></div>
    <%= link_to bookmark_path(bookmark), data: { "turbo-method": "delete", "turbo-confirm": "Are you sure you want to delete this bookmark?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  <% end %>
</ul>
<br>
<%= link_to new_list_bookmark_path(@list) do %>
  <button type="button" class="btn btn-outline-primary">Add a bookmark</button>
<% end %>
